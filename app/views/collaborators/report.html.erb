<!-- app/views/collaborators/report.html.erb -->
<div class="container mt-5">
  <!-- Exibição em lista -->
  <div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h3>Relatório de Funcionários por Faixa Salarial</h3>
      <%= link_to 'Voltar', collaborators_path, class: 'btn btn-outline-primary' %>
    </div>

    <!-- Exibição em lista -->
    <table class="table table-striped table-bordered mt-4">
      <thead>
        <tr>
          <th>Faixa Salarial</th>
          <th>Número de Funcionários</th>
        </tr>
      </thead>
      <tbody>
        <% @report_data.each do |range, count| %>
          <tr>
            <td><%= range %></td>
            <td><%= count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <!-- Exibição do gráfico com Stimulus -->
    <div class="mt-5" data-controller="chart" data-labels="<%= @report_data.keys %>" data-data="<%= @report_data.values %>">
      <canvas data-chart-target="chart"></canvas>
    </div>
  </div>
</div>
